{
  "name": "@pixpilot/dev-config",
  "version": "1.6.0",
  "description": "Modern, opinionated development configurations for TypeScript/JavaScript projects including ESLint, Prettier, Jest, and TypeScript configs",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "./eslint": {
      "types": "./dist/eslint.d.ts",
      "import": "./dist/eslint.js",
      "default": "./dist/eslint.js"
    },
    "./eslint-jest": {
      "types": "./dist/eslint-jest.d.ts",
      "import": "./dist/eslint-jest.js",
      "default": "./dist/eslint-jest.js"
    },
    "./prettier": {
      "types": "./dist/prettier.d.ts",
      "import": "./dist/prettier.js",
      "default": "./dist/prettier.js"
    },
    "./jest": {
      "types": "./dist/jest.d.ts",
      "import": "./dist/jest.js",
      "default": "./dist/jest.js"
    },
    "./typescript": "./dist/tsconfig-base.json",
    "./markdownlint": "./dist/markdownlint.json",
    "./eslint-react": {
      "types": "./dist/eslint-react.d.ts",
      "import": "./dist/eslint-react.js",
      "default": "./dist/eslint-react.js"
    },
    "./eslint-jsx-a11y": {
      "types": "./dist/eslint-jsx-a11y.d.ts",
      "import": "./dist/eslint-jsx-a11y.js",
      "default": "./dist/eslint-jsx-a11y.js"
    },
    "./eslint-prettier": {
      "types": "./dist/eslint-prettier.d.ts",
      "import": "./dist/eslint-prettier.js",
      "default": "./dist/eslint-prettier.js"
    },
    "./eslint-next": {
      "types": "./dist/eslint-next.d.ts",
      "import": "./dist/eslint-next.js",
      "default": "./dist/eslint-next.js"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "tsc -p tsconfig.build.json && pnpm run copy-assets",
    "copy-assets": "node scripts/copy-assets.js",
    "clean": "rimraf dist",
    "test": "node tests/verify.js",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "lint:README": "markdownlint README.md",
    "lint:README:fix": "markdownlint README.md --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "tsc:watch": "tsc --noEmit --watch",
    "fix:all": "pnpm run lint:fix && pnpm run lint:README:fix && pnpm run format:fix",
    "prepublishOnly": "pnpm run clean && pnpm run build",
    "prepare": "husky",
    "release": "semantic-release"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,yml}": [
      "eslint --fix",
      "prettier --write"
    ],
    "README.md": [
      "pnpm run lint:README:fix"
    ]
  },
  "keywords": [
    "eslint",
    "prettier",
    "typescript",
    "jest",
    "tsconfig",
    "config",
    "development",
    "linting",
    "formatting",
    "testing"
  ],
  "author": "pixpilot",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pixpilot/dev-config"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=20",
    "pnpm": ">=9.6.0"
  },
  "peerDependencies": {
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.1.5",
    "prettier": "^3.6.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.0.0"
  },
  "optionalPeerDependencies": {
    "jest": "^29.0.0",
    "markdownlint-cli": "^0.45.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-jest": "^29.0.1",
    "@next/eslint-plugin-next": "^15.3.5"
  },
  "dependencies": {
    "@eslint/compat": "^1.3.1",
    "@eslint/js": "^9.31.0",
    "eslint-plugin-import": "^2.32.0"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.3",
    "@semantic-release/npm": "^12.0.2",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "@types/eslint-plugin-jsx-a11y": "^6.10.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.0.13",
    "@typescript-eslint/utils": "^8.36.0",
    "@next/eslint-plugin-next": "^15.3.5",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "husky": "^9.1.7",
    "jest": "^30.0.4",
    "jiti": "^2.4.2",
    "lint-staged": "^16.1.2",
    "markdownlint-cli": "^0.45.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "semantic-release": "^24.2.7",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.36.0"
  }
}
