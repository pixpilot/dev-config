{
  "name": "@pixpilot/dev-config",
  "version": "1.7.0-rc.1",
  "description": "Modern, opinionated development configurations for TypeScript/JavaScript projects including ESLint, Prettier, Jest, and TypeScript configs",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./*": {
      "import": "./dist/*.js",
      "require": "./dist/*.cjs",
      "types": "./dist/*.d.ts"
    },
    "./package.json": "./package.json",
    "./typescript": "./dist/tsconfig-base.json"
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "pnpm run clean && rollup -c",
    "build:types": "tsc --emitDeclarationOnly --outDir dist",
    "build:tsc": "pnpm run clean && tsc -p tsconfig.build.json && pnpm run copy-assets",
    "copy-assets": "node scripts/copy-assets.js",
    "clean": "rimraf dist",
    "test": "jest --runInBand",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "lint:README": "markdownlint README.md",
    "lint:README:fix": "markdownlint README.md --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "tsc:watch": "tsc --noEmit --watch",
    "fix:all": "pnpm run lint:fix && pnpm run lint:README:fix && pnpm run format:fix",
    "prepublishOnly": "pnpm run clean && pnpm run build",
    "prepare": "husky",
    "release": "semantic-release"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,yml}": [
      "eslint --fix",
      "prettier --write"
    ],
    "README.md": [
      "pnpm run lint:README:fix"
    ]
  },
  "keywords": [
    "eslint",
    "prettier",
    "typescript",
    "jest",
    "vite",
    "tsconfig",
    "config",
    "development",
    "linting",
    "formatting",
    "testing",
    "bundling"
  ],
  "author": "pixpilot",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pixpilot/dev-config"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=20",
    "pnpm": ">=9.6.0"
  },
  "dependencies": {
    "@eslint/compat": "^1.3.1",
    "@eslint/js": "^9.31.0",
    "@next/eslint-plugin-next": "^15.3.5",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "markdownlint-cli": "^0.45.0",
    "typescript-eslint": "^8.36.0"
  },
  "peerDependencies": {
    "eslint": "^9.0.0",
    "jest": "^29.0.0",
    "prettier": "^3.6.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0"
  },
  "peerDependenciesMeta": {
    "jest": {
      "optional": true
    },
    "ts-jest": {
      "optional": true
    }
  },
  "devDependencies": {
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.4",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.3",
    "@semantic-release/npm": "^12.0.2",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "@types/eslint-plugin-jsx-a11y": "^6.10.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.0.13",
    "@typescript-eslint/utils": "^8.36.0",
    "glob": "^11.0.3",
    "husky": "^9.1.7",
    "jest": "^30.0.4",
    "jiti": "^2.4.2",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "rollup": "^4.45.1",
    "rollup-plugin-copy": "^3.5.0",
    "semantic-release": "^24.2.7",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3"
  }
}
