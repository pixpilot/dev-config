{
  "extends": "./packages/dev-config/src/tsconfig-base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@internal/*": ["packages/*/src"]
    },
    "types": ["vitest/globals"],
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "noEmit": false
  },
  "exclude": [
    "node_modules",
    "**/node_modules/**",
    "**/.cache/**",
    "**/.expo/**",
    "**/.nest/**",
    "**/build/**",
    "**/babel.config.js",
    "**/metro.config.js",
    "**/zip.js",
    "coverage",
    "**/dist/**",
    "**/*.js"
  ]
}
